---
import '../styles/theme.css';
interface Props {
    style?: 'subtitle' | 'black',
}
---
<p class={Astro.props.style}><slot></slot></p>

<style>
    p {
        font-family: var(--font-body), sans-serif;
        color: var(--text-50);
        margin: 0;
        max-width: min(50ch, 90vw);
        & :global(em) {
            font-style: normal;
            color: var(--primary-300);
        }
        & :global(em) > :global(em) {
            color: var(--secondary-300);
        }
    }
    p.black {
        color: var(--text-950);
        & :global(em) {
            font-weight: 700;
            color: var(--text-950);
        }
    }
    p.subtitle {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        max-width: min(75ch, 90vw);

        font-size: var(--font-size-subtitle);
        font-weight: 600;
        
        color: var(--text-50);
        text-shadow: 0px 0px .75rem var(--primary-800);

        & :global(em) {
            font-weight: 700;
            color: var(--accent-alt-300);
        }
    }
</style>
